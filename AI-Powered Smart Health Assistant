<div class="container">
  <h1>Smart Health Assistant</h1>
  <p>Select your symptoms to get detailed guidance</p>

  <div class="symptoms-list">
    <label><input type="checkbox" value="fever"> Fever</label>
    <label><input type="checkbox" value="cough"> Cough</label>
    <label><input type="checkbox" value="cold"> Cold</label>
    <label><input type="checkbox" value="headache"> Headache</label>
    <label><input type="checkbox" value="fatigue"> Fatigue</label>
    <label><input type="checkbox" value="body ache"> Body Ache</label>
    <label><input type="checkbox" value="chest pain"> Chest Pain</label>
    <label><input type="checkbox" value="shortness of breath"> Shortness of Breath</label>
    <label><input type="checkbox" value="dizziness"> Severe Dizziness</label>
    <label><input type="checkbox" value="high blood pressure"> High Blood Pressure</label>
    <label><input type="checkbox" value="diabetes"> Diabetes</label>
    <label><input type="checkbox" value="stomach pain"> Stomach Pain</label>
    <label><input type="checkbox" value="allergy"> Allergy / Rash</label>
  </div>

  <button onclick="checkHealth()">Check Health</button>

  <div class="severity-bar" id="severityBar"></div>
  <div id="output"></div>
</div>

<script>
function checkHealth() {
  const checkboxes = document.querySelectorAll('.symptoms-list input[type="checkbox"]');
  const selected = [];
  checkboxes.forEach(cb => { if(cb.checked) selected.push(cb.value); });

  const output = document.getElementById("output");
  const severityBar = document.getElementById("severityBar");
  output.innerHTML = "";
  output.className = "";
  severityBar.className = "severity-bar";

  let severityClass = "";
  let icon = "";
  const tips = [];

  if(selected.length === 0){
    severityClass = "moderate";
    icon = "ℹ️";
    tips.push("Please select at least one symptom.");
  }
  else if(selected.some(sym => ["chest pain","shortness of breath","dizziness"].includes(sym))){
    severityClass = "severe";
    icon = "❗";
    tips.push("Seek immediate medical attention!");
  }
  else if(selected.some(sym => ["high blood pressure","diabetes"].includes(sym))){
    severityClass = "moderate";
    icon = "⚠️";
    selected.forEach(sym => {
      if(sym === "high blood pressure") tips.push("Monitor BP and follow your doctor's advice.");
      if(sym === "diabetes") tips.push("Check sugar levels and follow diet/medication plan.");
    });
  }
  else{
    severityClass = "mild";
    icon = "✅";
    selected.forEach(sym => {
      if(sym === "fever") tips.push("Rest, hydrate, monitor temperature.");
      if(sym === "cough") tips.push("Avoid cold drinks, rest, monitor symptoms.");
      if(sym === "cold") tips.push("Stay warm, drink fluids, rest.");
      if(sym === "headache") tips.push("Drink water, rest, reduce stress.");
      if(sym === "fatigue") tips.push("Get enough sleep and light exercise.");
      if(sym === "body ache") tips.push("Rest and mild pain relief if needed.");
      if(sym === "stomach pain") tips.push("Avoid spicy food, stay hydrated, rest.");
      if(sym === "allergy") tips.push("Avoid allergens and consult doctor if worsens.");
    });
  }

  // Add severity class
  output.className = severityClass + " show";
  severityBar.classList.add(severityClass);

  // Show icon & guidance
  tips.forEach((tip, index) => {
    const div = document.createElement("div");
    div.className = "tip";
    div.style.animationDelay = `${index * 0.15}s`;
    div.innerHTML = `<span class="icon">${icon}</span> ${tip}`;
    output.appendChild(div);
  });

  // Reset checkboxes
  checkboxes.forEach(cb => cb.checked = false);
}
</script>

</body>
